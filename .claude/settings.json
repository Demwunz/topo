{
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/topo-track.sh",
            "timeout": 5,
            "type": "command"
          }
        ],
        "matcher": "Read"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/topo-hint.sh",
            "timeout": 10,
            "type": "command"
          }
        ],
        "matcher": "Glob|Grep"
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/topo-context.sh",
            "timeout": 15,
            "type": "command"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(cargo *)",
      "Bash(rustup *)",
      "Bash(mkdir *)",
      "Bash(ls *)",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git stash *)",
      "Bash(npx skills *)",
      "Bash(gh *)",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "Task"
    ],
    "deny": [
      "Bash(git push --force *)",
      "Bash(git reset --hard *)",
      "Bash(rm -rf *)",
      "Bash(cargo publish *)"
    ]
  }
}
